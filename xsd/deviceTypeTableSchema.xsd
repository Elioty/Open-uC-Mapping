<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <xsd:include schemaLocation="./baseSchema.xsd"/>
    <xsd:include schemaLocation="./registerTypeTableSchema.xsd"/>

    <xsd:complexType name="registerInstanceType">
        <xsd:attribute ref="name" use="required"/>
        <!-- type must refer to a valid registerTypeType node's name -->
        <xsd:attribute ref="type" use="required"/>
        <!-- relative address to the start of the device or absolute in the SOC address space -->
        <xsd:attribute ref="address" use="required"/>
    </xsd:complexType>

    <xsd:element name="registerInstance" type="registerInstanceType"/>

    <xsd:complexType name="deviceLayoutType">
        <xsd:sequence>
            <xsd:element ref="registerInstance" minOccurs="0" maxOccurs="unbounded"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="deviceTypeType">
        <xsd:sequence>
            <xsd:element ref="description" minOccurs="0" maxOccurs="1"/>
            <!-- device specific register type table -->
            <xsd:element ref="registerTypeTable" minOccurs="0" maxOccurs="1"/>
            <xsd:element name="layout" type="deviceLayoutType" minOccurs="0" maxOccurs="1"/>
        </xsd:sequence>
        <xsd:attribute ref="name" use="required"/>
    </xsd:complexType>

    <xsd:element name="deviceType" type="deviceTypeType"/>

    <xsd:complexType name="deviceTypeTableType">
        <xsd:choice maxOccurs="unbounded">
            <xsd:element ref="include" minOccurs="0" maxOccurs="unbounded"/>
            <xsd:element ref="deviceType" minOccurs="0" maxOccurs="unbounded"/>
        </xsd:choice>
    </xsd:complexType>

    <xsd:element name="deviceTypeTable" type="deviceTypeTableType"/>
</xsd:schema>
